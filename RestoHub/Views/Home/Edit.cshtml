@model RestaurantViewModel
@using RestoHub.Enums

@{
    ViewBag.Title = "Edit Restaurant";
}

<div>
    <h1>Edit Restaurant</h1>
</div>

<div>
    <form method="post" asp-action="Edit">
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="Cuisine"></label>
                <select asp-for="Cuisine" asp-items="@Html.GetEnumSelectList(typeof(Cuisines))" class="form-control">
                </select>
                <span asp-validation-for="Cuisine"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <input type="submit" class="btn btn-success" value="Update" />
            </div>
        </div>
    </form>
</div>
